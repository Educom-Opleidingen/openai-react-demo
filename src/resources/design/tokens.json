{
  "unit": "rem",
  "page": { "backgroundColor": "#FFF", "margin": 0, "padding": 0 },
  "colors": [
    { "type": "black", "color": "#161616", "shades": [] },
    { "type": "highlight-black", "color": "#212121", "shades": [] },
    { "type": "white", "color": "#FFF", "shades": [] },
    { "type": "white-muted", "color": "rgba(255,255,255,0.6)", "shades": [] },
    { "type": "button-blue", "color": "#5B42F3", "shades": [30] }
  ],

  "fonts": [
    {
      "type": "main-text-regular",
      "uri": "'../fonts/sanfranciscodisplay-regular-webfont'",
      "sizes": [12, 14, 16, 18, 20]
    },
    {
      "type": "main-text-bold",
      "uri": "'../fonts/sanfranciscodisplay-regular-webfont'",
      "sizes": [12, 14, 16, 18, 20]
    },
    {
      "type": "main-text-link",
      "uri": "'../fonts/sanfranciscodisplay-regular-webfont'",
      "sizes": [12, 14, 16]
    },
    {
      "type": "label-text",
      "uri": "'../fonts/sanfranciscodisplay-regular-webfont'",
      "sizes": [12, 14, 16, 18, 20, 22, 24, 26, 28]
    }
  ],

  "headings": {
    "type": "heading",
    "uri": "'../fonts/helveticaneue'",
    "variant": [
      { "h1": 42 },
      { "h2": 32 },
      { "h3": 28 },
      { "h4": 26 },
      { "h5": 24 },
      { "h6": 22 }
    ]
  },

  "spacing": {
    "small": 1,
    "medium": 2,
    "large": 3
  }
}
